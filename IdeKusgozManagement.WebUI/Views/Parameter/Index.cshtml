@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Parametre Yönetimi";
}

@section Styles {
    <link href="~/theme/assets/plugins/DataTables/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
}

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-building me-2"></i>
                    Parametre Yönetimi
                </h5>

                <div class="table-responsive">
                    <table id="parametersTable" class="table table-striped table-hover display" style="width:100%">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>ANAHTAR</th>
                                <th>DEĞER</th>
                                <th>İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- DataTables will populate this -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Update Parameter Modal -->
<div class="modal fade" id="updateParameterModal" tabindex="-1" aria-labelledby="updateParameterModalLabel"
     aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Parametre Güncelleme Penceresi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="needs-validation" novalidate id="updateParameterForm">
                <div class="modal-body">
                    <input type="hidden" id="txtUId">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label for="txtUValue" class="form-label">Parametre Değeri</label>
                            <input type="text" class="form-control" id="txtUValue" required>
                            <div class="valid-feedback">İyi görünüyor!</div>
                            <div class="invalid-feedback">Geçerli bir parametre değeri giriniz.</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-pen me-1"></i>Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/theme/assets/plugins/DataTables/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        let parametersTable;

        $(document).ready(async function () {
            setupEventListeners();

            await initializeDataTable();

        });

        async function initializeDataTable() {
            parametersTable = $('#parametersTable').DataTable({
                "processing": true,
                "ajax": {
                    "url": "/parametre/liste",
                    "type": "GET",
                    "dataSrc": function (json) {
                        if (json) {
                            return json;
                        }
                        return [];
                    },
                    "error": function (xhr, error, code) {
                        console.error('DataTables AJAX error:', error);
                        let errorMessage = 'Veriler yüklenirken hata oluştu';
                        try {
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMessage += ': ' + xhr.responseJSON.message;
                            } else if (xhr.responseText) {
                                errorMessage += ': ' + xhr.responseText;
                            }
                        } catch (e) {
                            errorMessage += ': ' + error;
                        }

                        showToast(errorMessage, 'error', 'Hata');
                    }
                },
                "columns": [
                    {
                        "data": null,
                        "width": "5%",
                        "orderable": false,
                        "className": "text-center",
                        "render": function (data, type, row, meta) {
                            return '';
                        }
                    },
                    {
                        "data": "key",
                        "render": function (data) {
                            return data ? `<strong>${data}</strong>` : '';
                        }
                    },
                    {
                        "data": "value",
                        "render": function (data) {
                            return data ? `<strong>${data}</strong>` : '';
                        }
                    },
                    {
                        "data": null,
                        "width": "10%",
                        "orderable": false,
                        "className": "text-center",
                        "render": function (data, type, row) {

                            return `
                                                                        <div class="btn-group btn-group-sm" role="group">
                                                                         <button type="button" class="btn btn-outline-warning btn-sm"
                                                                           onclick="loadParameterForEdit('${row.key}')" title="Düzenle">
                                                                          <i class="fas fa-edit"></i>
                                                                         </button>

                                                                        </div>
                                                                   `;
                        }
                    }
                ],
                "language": {
                    url: 'https://cdn.datatables.net/plug-ins/2.3.2/i18n/tr.json'
                },
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "pageLength": 10,
                "responsive": true,
                "searchDelay": 300,
                "order": [[2, "asc"]],
                "drawCallback": function () {
                    var api = this.api();
                    var pageInfo = api.page.info();

                    api.column(0, { page: 'current' }).nodes().each(function (cell, i) {
                        cell.innerHTML = pageInfo.start + i + 1;
                    });
                    $('[title]').tooltip();
                }
            });
        }

        function setupEventListeners() {

            // Update Parameter form
            $('#updateParameterForm').on('submit', function (e) {
                e.preventDefault();
                if (this.checkValidity()) {
                    updateParameter();
                }
                $(this).addClass('was-validated');
            });

            $('#updateParameterModal').on('hidden.bs.modal', function () {
                $('#updateParameterForm')[0].reset();
                $('#updateParameterForm').removeClass('was-validated');
            });
        }

        async function loadParameterForEdit(key) {
            try {
                const response = await makeRequest(`/parametre/${key}`, 'GET');

                $('#txtUId').val(response.id);
                $('#txtUValue').val(response.value);
                $('#updateParameterModal').modal('show');
            } catch (error) {
                console.error('Load Parameter error:', error);
                handleError(error, 'Parametre bilgisi yüklenirken hata oluştu.');
            }
        }

        async function updateParameter() {
            const parameterId = $('#txtUId').val();
            const parameterData = {
                id: $('#txtUId').val(),
                value: $('#txtUValue').val().trim()
            };

            try {
                const response = await makeRequest(`/parametre/${parameterId}`, 'PUT', parameterData);

                showToast('Parametre başarıyla güncellendi.', 'success', 'Başarılı!');
                $('#updateParameterModal').modal('hide');
                parametersTable.ajax.reload();
            } catch (error) {
                console.error('Update Parameter error:', error);
                handleError(error, 'Parametre güncellenirken hata oluştu.');
            }
        }

    </script>
}