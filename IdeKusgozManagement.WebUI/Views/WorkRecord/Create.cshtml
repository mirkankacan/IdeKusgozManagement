                    hasApprovedRecords = false;
                    hideInfoMessage();
                    return false;
                }
            } catch (error) {
                console.error('Mevcut kayıtlar yüklenirken hata:', error);
                existingWorkRecords = {};
                expenseData = {};
                hasApprovedRecords = false;
                hideInfoMessage();
                return false;
            }
