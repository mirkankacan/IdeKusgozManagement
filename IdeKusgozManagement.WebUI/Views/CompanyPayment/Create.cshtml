@{
    ViewData["Title"] = "Şirket Ödemesi Taleplerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/theme/assets/plugins/DataTables/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
}
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-building me-2"></i>
                    Şirket Ödemesi Taleplerim
                </h5>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#createCompanyPaymentRequestModal">
                    <i class="fas fa-plus me-2"></i>Şirket Ödemesi Talebi Oluştur
                </button>
                <br />
                <br />
                <div class="table-responsive">
                    <table id="myCompanyPaymentRequestsTable" class="table table-striped table-hover display"
                        style="width:100%">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>EKİPMAN</th>
                                <th>PROJE</th>
                                <th>MASRAF</th>
                                <th>TUTAR</th>
                                <th>DURUM</th>
                                <th>NOT</th>
                                <th>DOKÜMANLAR</th>
                                <th>OLUŞTURMA<br />TARİHİ</th>
                                <th>İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- DataTables will populate this -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createCompanyPaymentRequestModal" tabindex="-1"
    aria-labelledby="createCompanyPaymentRequestModalLabel" aria-hidden="true" data-bs-backdrop="static"
    data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Şirket Ödemesi Talebi Oluşturma Penceresi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createCompanyPaymentRequestForm" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label for="selectCProjectId" class="form-label">Proje <span
                                    class="text-danger">*</span></label>
                            <select class="form-select project-select" id="selectCProjectId" required
                                style="width: 100%;">
                                <option value="">Proje seçiniz...</option>
                            </select>
                            <div class="valid-feedback">İyi görünüyor!</div>
                            <div class="invalid-feedback">Proje seçiniz.</div>
                        </div>
                        <div class="col-md-12">
                            <label for="selectCExpenseId" class="form-label">Masraf Türü <span
                                    class="text-danger">*</span></label>
                            <select class="form-select" id="selectCExpenseId" required style="width: 100%;">
                                <option value="">Masraf türü seçiniz...</option>
                            </select>
                            <div class="valid-feedback">İyi görünüyor!</div>
                            <div class="invalid-feedback">Masraf türü seçiniz.</div>
                        </div>
                        <div class="col-md-12">
                            <label for="selectCEquipmentId" class="form-label">Ekipman (İsteğe Bağlı)</label>
                            <select class="form-select equipment-select" id="selectCEquipmentId" style="width: 100%;">
                                <option value="">Ekipman seçiniz...</option>
                            </select>
                        </div>
                        <div class="col-md-12">
                            <label for="txtCAmount" class="form-label">Tutar <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="txtCAmount" required step="0.01" min="0.01">
                            <div class="valid-feedback">İyi görünüyor!</div>
                            <div class="invalid-feedback">Geçerli bir tutar giriniz.</div>
                        </div>
                        <div class="col-md-12">
                            <label for="txtCPersonnelNote" class="form-label">Personel Notu (İsteğe Bağlı)</label>
                            <textarea class="form-control" id="txtCPersonnelNote" rows="3"
                                placeholder="Personel notu..."></textarea>
                        </div>
                        <div class="col-md-12">
                            <label for="fileCFiles" class="form-label">Dosyalar <span
                                    class="text-danger">*</span></label>
                            <input type="file" class="form-control" id="fileCFiles" multiple
                                accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
                            <small class="form-text text-muted">Birden fazla dosya seçebilirsiniz (PDF, JPG, PNG, DOC,
                                DOCX)</small>
                        </div>
                        <div class="col-md-12">
                            <label for="selectCApproverId" class="form-label">Onaycı (İsteğe Bağlı)</label>
                            <select class="form-select approver-select" id="selectCApproverId" style="width: 100%;">
                                <option value="">Onaycı seçiniz...</option>
                            </select>

                        </div>
                        <div class="col-md-12" id="approverInfoContainer">
                            <div class="alert alert-info" role="alert">
                                <h6 class="alert-heading">
                                    <i class="fas fa-info-circle me-2"></i>Onaycı Seçimi Hakkında
                                    Bilgi
                                </h6>
                                <hr>
                                <div id="approverInfoContent">
                                    <p class="mb-0 small">
                                        Bir onaycı seçerseniz, talebiniz öncelikle bu kişinin onayına gönderilir.
                                        Onaycı seçmezseniz, talebiniz doğrudan Finans Departmanı'na iletilir ve
                                        onların onayına sunulur.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus me-1"></i>Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>
