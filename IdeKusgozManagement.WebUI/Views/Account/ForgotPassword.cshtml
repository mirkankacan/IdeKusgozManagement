@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kuşgöz İzmir Vinç - Giriş Yap</title>

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,700,800&display=swap" rel="stylesheet">
    <link href="~/theme/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/theme/assets/plugins/font-awesome/css/all.min.css" rel="stylesheet">
    <link href="~/theme/assets/plugins/perfectscroll/perfect-scrollbar.css" rel="stylesheet">
    <link href="~/theme/assets/css/main.min.css" rel="stylesheet">
    <link href="~/theme/assets/css/custom.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

    <style>
        .modal-footer {
            flex-wrap: nowrap !important;
        }

        .countdown-timer {
            font-size: 1.1em;
            font-weight: 600;
            color: #dc3545;
            text-align: center;
            margin-bottom: 15px;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 5px;
            border-left: 4px solid #dc3545;
        }

            .countdown-timer.warning {
                color: #fd7e14;
                border-left-color: #fd7e14;
            }

            .countdown-timer.danger {
                color: #dc3545;
                border-left-color: #dc3545;
                animation: pulse 1s infinite;
            }

        @@keyframes pulse {
            0% {
                opacity: 1;
            }

            50% {
                opacity: 0.7;
            }

            100% {
                opacity: 1;
            }
        }
    </style>
</head>

<body class="login-page">

    <div class='loader'>
        <div class='spinner-grow text-primary' role='status'>
            <span class='sr-only'>Yükleniyor...</span>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-12 col-lg-4">
                <div class="card login-box-container">
                    <div class="card-body">
                        <div class="authent-logo text-center">
                            <img src="~/theme/assets/images/logo.png" width="200" alt="Logo">
                        </div>
                        <div class="authent-text text-center mb-4">
                            <p>Şifrenizi sıfırlamak için sisteme kayıtlı olan TC No'yu giriniz.</p>
                        </div>

                        <form id="sendMailForm">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="txtTCNo" placeholder="Sisteme kayıtlı TC No'nuzu giriniz..." required>
                                    <label for="txtTCNo">TC No</label>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button id="btnSend" type="submit" class="btn btn-info"><i data-feather="send"></i> Sıfırlama Kodu Gönder</button>
                            </div>

                            <div id="errorArea" class="text-danger text-center mt-3"></div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reset Password Modal -->
    <div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel"
         aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Şifre Sıfırlama Penceresi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form class="needs-validation" novalidate id="resetPasswordForm">
                    <div class="modal-body">
                        <!-- Countdown Timer -->
                        <div id="countdownTimer" class="countdown-timer">
                            <i class="fas fa-clock me-2"></i>
                            Kalan Süre: <span id="timeLeft">05:00</span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <input type="text" class="form-control" id="txtRTCNo" required disabled readonly hidden>
                            </div>
                            <div class="col-md-12">
                                <label for="txtRNewPassword" class="form-label">Yeni Şifre</label>
                                <input type="password" class="form-control" id="txtRNewPassword" required>
                                <div class="valid-feedback">İyi görünüyor!</div>
                                <div class="invalid-feedback">Geçerli bir şifre giriniz.</div>
                            </div>
                            <div class="col-md-12">
                                <label for="txtRConfirmPassword" class="form-label">Yeni Şifre Tekrar</label>
                                <input type="password" class="form-control" id="txtRConfirmPassword" required>
                                <div class="valid-feedback">İyi görünüyor!</div>
                                <div class="invalid-feedback">Geçerli bir şifre giriniz.</div>
                            </div>
                            <div class="col-md-12">
                                <label for="txtRCode" class="form-label">Doğrulama Kodu</label>
                                <input type="text" class="form-control" id="txtRCode" required maxlength="6">
                                <div class="valid-feedback">İyi görünüyor!</div>
                                <div class="invalid-feedback">Geçerli bir kod giriniz.</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-rotate me-1"></i>Sıfırla</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/theme/assets/plugins/jquery/jquery-3.4.1.min.js"></script>
    <script src="https://unpkg.com/@@popperjs/core@2"></script>
    <script src="~/theme/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="~/theme/assets/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
    <script src="~/theme/assets/js/main.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        let countdownInterval;
        let totalSeconds = 300; // 5 dakika = 300 saniye

        // Geri sayım fonksiyonu
        function startCountdown() {
            countdownInterval = setInterval(function() {
                let minutes = Math.floor(totalSeconds / 60);
                let seconds = totalSeconds % 60;

                // Zamanı formatla (MM:SS)
                let formattedTime = String(minutes).padStart(2, '0') + ':' + String(seconds).padStart(2, '0');
                $('#timeLeft').text(formattedTime);

                // Renk değişiklikleri
                let timerElement = $('#countdownTimer');
                if (totalSeconds <= 60) { // Son 1 dakika
                    timerElement.removeClass('warning').addClass('danger');
                } else if (totalSeconds <= 120) { // Son 2 dakika
                    timerElement.removeClass().addClass('countdown-timer warning');
                }

                totalSeconds--;

                // Süre dolduğunda
                if (totalSeconds < 0) {
                    clearInterval(countdownInterval);
                    $('#resetPasswordModal').modal('hide');
                    toastr.warning('Doğrulama kodu süresi doldu. Lütfen yeni kod talep ediniz.', 'Süre Doldu');

                    // Formu sıfırla
                    resetModalForm();
                }
            }, 1000);
        }

        // Modal formu sıfırla
        function resetModalForm() {
            $('#resetPasswordForm')[0].reset();
            $('#resetPasswordForm').removeClass('was-validated');
            $('#countdownTimer').removeClass('warning danger').addClass('countdown-timer');
            $('#timeLeft').text('05:00');
            totalSeconds = 300;
        }

        // Mail gönderme formu
        $("#sendMailForm").on("submit", function (e) {
            e.preventDefault();
            const forgotPasswordViewModel = {
                TCNo: $("#txtTCNo").val().trim(),
            };

            $('#btnSend').attr("disabled", true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Kod gönderiliyor...');

            $.ajax({
                url: "/sifremi-unuttum",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(forgotPasswordViewModel),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if(response && response.isSuccess && response.data == true){
                        toastr.success(`Şifre sıfırlama kodu başarıyla gönderildi`, "Başarılı");

                        resetModalForm();

                        $('#resetPasswordModal').modal('show');
                                                $('#txtRTCNo').val(forgotPasswordViewModel.TCNo);

                        // Geri sayımı başlat
                        startCountdown();
                    }
                },
                error: function (xhr) {
                    let errorMessage = "Bir hata oluştu.";
                    if (xhr.responseText) {
                        try {
                            const errorData = JSON.parse(xhr.responseText);
                            errorMessage = errorData.message || errorData || xhr.responseText;
                        } catch (e) {
                            errorMessage = xhr.responseText;
                        }
                    }
                    toastr.error(errorMessage, "Hata");
                },
                complete: function () {
                    $('#btnSend').attr("disabled", false).html('<i data-feather="send"></i> Sıfırlama Kodu Gönder');
                    feather.replace();
                }
            });
        });

        // Modal kapandığında geri sayımı durdur
        $('#resetPasswordModal').on('hidden.bs.modal', function () {
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
            resetModalForm();
        });

        // Şifre sıfırlama formu
        $("#resetPasswordForm").on("submit", function (e) {
            e.preventDefault();

            // Form validasyonu
            this.classList.add('was-validated');

            if (!this.checkValidity()) {
                return;
            }

            // Şifre eşleşme kontrolü
            const newPassword = $("#txtRNewPassword").val();
            const confirmPassword = $("#txtRConfirmPassword").val();

            if (newPassword !== confirmPassword) {
                toastr.error("Şifreler eşleşmiyor!", "Hata");
                return;
            }

            const resetPasswordViewModel = {
                TCNo: $("#txtRTCNo").val(),
                NewPassword: newPassword,
                ConfirmPassword: confirmPassword,
                VerificationCode: $("#txtRCode").val().trim()
            };

            // Buton durumunu güncelle
            const submitBtn = $(this).find('button[type="submit"]');
            submitBtn.attr("disabled", true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sıfırlanıyor...');

            $.ajax({
                url: "/sifre-sifirla",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify(resetPasswordViewModel),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                        toastr.success("Şifreniz başarıyla sıfırlandı. Giriş yapılıyor...", "Başarılı");

                        // Geri sayımı durdur
                        if (countdownInterval) {
                            clearInterval(countdownInterval);
                        }

                        $('#resetPasswordModal').modal('hide');

                         const redirectUrl = response;
                         setTimeout(() => window.location.href = redirectUrl, 1000);

                },
                error: function (xhr) {
                    let errorMessage = "Şifre sıfırlama işlemi başarısız.";
                    if (xhr.responseText) {
                        try {
                            const errorData = JSON.parse(xhr.responseText);
                            errorMessage = errorData.message || errorData || xhr.responseText;
                        } catch (e) {
                            errorMessage = xhr.responseText;
                        }
                    }
                    toastr.error(errorMessage, "Hata");
                },
                complete: function () {
                    submitBtn.attr("disabled", false).html('<i class="fas fa-rotate me-1"></i>Sıfırla');
                }
            });
        });

        // Feather icons'ları başlat
        feather.replace();
    </script>
</body>

</html>